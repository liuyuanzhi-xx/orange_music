<!-- components/musicList/musicList.wxml -->
<view class="musicListContainer">
    <view class="musicItem" wx:for="{{list}}" wx:key="id" catchtap="handleTap" mark:index="{{index}}" data-id="info">
        <image class="image" src="{{item.picUrl||item.al.picUrl}}" catchtap="handleTap" mark:index="{{index}}" data-id="img">
            <image class="iconfont play" src="/static/images/loading2.svg" style="display:{{isPlay && (playSong.id == item.id)? 'block':'none'}}"></image>
            <view class="iconfont icon-bofang2" style="display:{{(!isPlay || (playSong.id != item.id)) && (loadingSongId != item.id || !loading )? 'block':'none'}}"></view>
            <image class="iconfont loading" src="/static/images/loading.svg" style="display:{{loading && (loadingSongId == item.id)? 'block':'none'}}"></image>
        </image>
        <view class="musicInfo">
            <view class="title">
                <view class="songName">{{item.name}}</view>
            </view>
            <view class="disc">
                <view class="singer">{{" â€”"+item.singer}}</view>
            </view>
        </view>
    </view>
</view>